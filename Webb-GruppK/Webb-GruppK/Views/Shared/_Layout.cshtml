
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Grupp K</title>
    <link rel="stylesheet"
          href="style.css" ;>
    <meta name="viewport" content="width-device-width, initial scale=1.0">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <link href="@Url.Content("~/Style/StyleSheet.css")" rel="stylesheet" type="text/css" />
    @RenderSection("Styles", false)
</head>
<body>
    <header>
        <a href="#" id="logo"></a>
        <nav id="header">
            <a href="#" id="menu-icon"></a>
            <ul class="tabs">
                <li>@Html.ActionLink("Tablå", "index", "Tv")</li>
                <li>@Html.ActionLink("Registrera", "Register", "person")</li>
                <li>@Html.ActionLink("Logga in", "Login", "person")</li>               
                @*<li>@Html.ActionLink("Om oss", "indexAboutUs", "Tv")</li>
                <li>@Html.ActionLink("Kontakta oss", "indexContact", "Tv")</li>
                <li>@Html.ActionLink("Min sida", "indexLogin", "Tv")</li>*@
            </ul>
            <form id="search">
                <input id="searchBar" type="text" name="search" placeholder="Search...">
            </form>
        </nav>
    </header>
    <footer class="firstFooter">
        <section id="aboutUs">
            <h3><strong>Om oss</strong></h3>
            <p>Vi är Sveriges ledande tvtablå och har allt du söker.</p>
        </section>
        <section id="contact">
            <h3><strong>Kontakt</strong></h3>
            <p>Adress: Campusvägen 13, Östersund</p>
            <p> Telefon: 0708909897/0707458189</p>
            <p> E-post: hannesochjonathan@live.se</p>
        </section>
        <section id="Icons">
            <h3><strong>Följ oss på:</strong></h3>
            <div class="socialIcon1">
                <img class="facebook"><a href="http://www.facebook.com">
                    <img src="@Url.Content("~/Style/Images/facebook.png")" alt="Ikon för Facebook saknas" />
                    <p class="descFacebook">Facebook!</p>
            </div>
            <div class="socialIcon2">
                <img id="instagram"><a href="https://www.instagram.com/">
                    <img src="@Url.Content("~/Style/Images/instagram.png")" alt="Ikon för Instagram saknas" />
                    <p class="descInstagram">Instagram!</p>
            </div>
            <div class="socialIcon3">
                <img id="twitter"><a @*href="https://www.twitter.com/"*@>
                    <img src="@Url.Content("~/Style/Images/twitter.png")" alt="Ikon för Twitter saknas" />
                    <p class="descTwitter">Twitter!</p>
            </div>
        </section>
    </footer>
    <footer class="secondFooter">
        <p>&copy; Copyright - Tvtablå.se 2017</p>
    </footer>
    @RenderBody()
</body>
</html>


