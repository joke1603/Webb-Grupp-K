
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Grupp K</title>
    <meta name="viewport" content="width-device-width, initial scale=1.0">
    <link href="~/Style/StyleSheet.css" rel="stylesheet" />
    @RenderSection("Styles", false)
</head>
<body>
    <header>
        <a href="/Home" id="logo"></a>
        <nav id="header">
            <a href="#" id="menu-icon"></a>
            <ul class="tabs">
                @if (Session["admin"] != null)
                {
                <li>@Html.ActionLink("Tablå", "Index", "Home")</li>
                <li>@Html.ActionLink("Logga ut", "Logout", "Login")</li>
                <li>@Html.ActionLink("Min sida", "MyPage", "Home")</li>
                <li>@Html.ActionLink("Redigera nyhetspuffar", "AdminPage", "Home")</li>
                }

                else if (Session["id"] != null)
                {
                    <li class="current">@Html.ActionLink("Hem", "Index", "Home")</li>
                    <li class="current">@Html.ActionLink("Min Sida", "MyPage", "Home")</li>
                    <li class="current">@Html.ActionLink("Logga Ut", "Logout", "Login")</li>
                }
                else
                {
                    <li class="current">@Html.ActionLink("Hem", "Index", "Home")</li>
                    <li class="current">@Html.ActionLink("Registrera", "Register", "person")</li>
                    <li class="current">@Html.ActionLink("Logga in", "Login", "Login")</li>
                }
            </ul>
            @using (Html.BeginForm())
            {
                <p id="search">
                    @Html.TextBox("SearchString")
                    <input id="searchButton" type="submit" value="Sök" />
                </p>
            }
        </nav>
    </header>
    <footer class="firstFooter">
        <section id="aboutUs">
            <h3><strong>Om oss</strong></h3>
            <p>Vi är Sveriges ledande tvtablå och har allt du söker.</p>
        </section>
        <section id="contact">
            <h3><strong>Kontakt</strong></h3>
            <p>Adress: Campusvägen 13, Östersund</p>
            <p> Telefon: 0708909897/0707458189</p>
            <p> E-post: hannesochjonathan@live.se</p>
        </section>
        <section id="Icons">
            <h3><strong>Följ oss på:</strong></h3>
            <div class="socialIcon1">
                <img class="facebook"><a href="http://www.facebook.com">
                    <img src="@Url.Content("~/Style/Images/facebook.png")" alt="Ikon för Facebook saknas" />
                    <p class="descFacebook">Facebook!</p>
            </div>
            <div class="socialIcon2">
                <img id="instagram"><a href="https://www.instagram.com/">
                    <img src="@Url.Content("~/Style/Images/instagram.png")" alt="Ikon för Instagram saknas" />
                    <p class="descInstagram">Instagram!</p>
            </div>
            <div class="socialIcon3">
                <img id="twitter"><a @*href="https://www.twitter.com/"*@>
                    <img src="@Url.Content("~/Style/Images/twitter.png")" alt="Ikon för Twitter saknas" />
                    <p class="descTwitter">Twitter!</p>
            </div>
        </section>
    </footer>
    <footer class="secondFooter">
        <p>&copy; Copyright - Tvtablå.se 2017</p>
    </footer>
    @RenderBody()
</body>
</html>